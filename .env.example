# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration (PostgreSQL - Render)
DATASOURCE_URL=jdbc:postgresql://host:5432/database?currentSchema=schema&sslmode=require
DATASOURCE_USER=your_user
DATASOURCE_PASSWORD=your_password
DB_SCHEMA=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
APPLICATION_SECURITY_JWT_SECRET_KEY=your-secret-key

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend.netlify.app

# Admin User Auto-Creation
ADMIN_ENABLED=true
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-password
ADMIN_NAME=System Administrator
ADMIN_PHONE=+254700000000
